{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "paths": {
      "Utils/*": ["Utils/*"]
    },
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "Old files/OldClasses/**/*",
    "Old files/OldClasses/Lieux/Commune.ts",
    "Old files/OldClasses/Lieux/Departement.ts",
    "Utils/2D/SurfaceCompute.ts",
    "__tests__/**/*",
    "validate-config.ts",
    "dist/**/*"
  ]
}
